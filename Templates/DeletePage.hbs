{{> header}}

<div id="editMovie">
    <h1>Delete movie</h1>
    <form action="#/delete/{{_id}}" method="POST">
        <label>Title</label>
        <input type="text" name="title" value="{{title}}" id="editTitle" disabled="">
        <label>Image Url</label>
        <input type="text" name="imageUrl" id="editImage"
               value="{{imageURL}}" disabled="">
        <label>Description</label>
        <textarea type="text" id="editDescription" disabled=""
                  name="description">{{description}} disabled=""</textarea>
        <label>Genres</label>
        <input type="text" name="genres" value="{{genres}}" id="editGenres" disabled="">
        <label>Available Tickets</label>
        <input type="number" name="tickets" value="{{tickets}}" id="editTickets" disabled="">
        <input type="submit" value="Delete">
    </form>
</div>

{{> footer}}